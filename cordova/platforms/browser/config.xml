<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.geolocation" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Geolocation</name>
    <description>
        A sample Cordova application to use the Javascript Geolocation API on mobile
    </description>
    <author email="marceau.david@ynov.com" href="https://github.com/marceaudavid">
        Marceau David
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
